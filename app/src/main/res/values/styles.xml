<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Neumorph.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
    </style>
    <style name="CustomShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">32dp</item>

        <!-- Or if wants different radii depending on the corner. -->
        <item name="neumorph_cornerSizeTopLeft">16dp</item>
        <item name="neumorph_cornerSizeTopRight">16dp</item>
        <item name="neumorph_cornerSizeBottomLeft">16dp</item>
        <item name="neumorph_cornerSizeBottomRight">16dp</item>
    </style>
    <style name="CustomImageView">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">100dp</item>
        <item name="neumorph_cornerSizeTopLeft">150dp</item>
        <item name="neumorph_cornerSizeTopRight">150dp</item>
        <item name="neumorph_cornerSizeBottomLeft">150dp</item>
        <item name="neumorph_cornerSizeBottomRight">150dp</item>
    </style>
    <style name="PlayerImageView">
        <item name="neumorph_cornerFamily">oval</item>
        <item name="neumorph_cornerSize">20dp</item>
        <item name="neumorph_cornerSizeTopLeft">10dp</item>
        <item name="neumorph_cornerSizeTopRight">5dp</item>
        <item name="neumorph_cornerSizeBottomLeft">5dp</item>
        <item name="neumorph_cornerSizeBottomRight">5dp</item>
    </style>
</resources>